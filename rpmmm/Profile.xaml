<Window x:Class="rpmmm.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpmmm"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowState="Maximized"
         Title="Профиль" Height="1080" Width="1920">
    <Grid Background="#E8F3F2">
        
            <local:topPanel HorizontalAlignment="Stretch" Loaded="topPanel_Loaded"/>
        

        <Border MinWidth="1700" MinHeight="850" Background="white" Margin="15" VerticalAlignment="Center" Padding="30" MaxWidth="1750" CornerRadius="20" >
            <Button Content="Выйти" FontSize="20"  Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,1542,0" Click="Button_Click"/>
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
        </Border>

    </Grid>
</Window>
